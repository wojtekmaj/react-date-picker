{
  "name": "react-date-picker",
  "version": "12.0.1",
  "description": "A date picker for your React app.",
  "type": "module",
  "sideEffects": [
    "*.css"
  ],
  "main": "./dist/index.js",
  "source": "./src/index.ts",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js",
    "./dist/DateInput": "./dist/DateInput.js",
    "./dist/DateInput.js": "./dist/DateInput.js",
    "./dist/DateInput/DayInput": "./dist/DateInput/DayInput.js",
    "./dist/DateInput/DayInput.js": "./dist/DateInput/DayInput.js",
    "./dist/DateInput/MonthInput": "./dist/DateInput/MonthInput.js",
    "./dist/DateInput/MonthInput.js": "./dist/DateInput/MonthInput.js",
    "./dist/DateInput/MonthSelect": "./dist/DateInput/MonthSelect.js",
    "./dist/DateInput/MonthSelect.js": "./dist/DateInput/MonthSelect.js",
    "./dist/DateInput/YearInput": "./dist/DateInput/YearInput.js",
    "./dist/DateInput/YearInput.js": "./dist/DateInput/YearInput.js",
    "./*": "./*"
  },
  "scripts": {
    "build": "yarn build-js && yarn copy-styles",
    "build-js": "tsc --project tsconfig.build.json",
    "clean": "node -e \"fs.rmSync('./dist', { recursive: true, force: true })\"",
    "copy-styles": "cpy 'src/**/*.css' dist",
    "format": "biome format",
    "lint": "biome lint",
    "prepack": "yarn clean && yarn build",
    "test": "yarn lint && yarn tsc && yarn format && yarn unit",
    "tsc": "tsc",
    "unit": "vitest",
    "watch": "yarn build-js --watch & node --eval \"fs.watch('src', () => child_process.exec('yarn copy-styles'))\""
  },
  "keywords": [
    "calendar",
    "date",
    "date-picker",
    "month-picker",
    "react"
  ],
  "author": {
    "name": "Wojciech Maj",
    "email": "kontakt@wojtekmaj.pl"
  },
  "license": "MIT",
  "dependencies": {
    "@wojtekmaj/date-utils": "^2.0.2",
    "clsx": "^2.0.0",
    "get-user-locale": "^3.0.0",
    "make-event-props": "^2.0.0",
    "react-calendar": "^6.0.0",
    "react-fit": "^3.0.0",
    "update-input-width": "^1.4.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.4",
    "@testing-library/dom": "^10.0.0",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^16.0.0",
    "@types/node": "*",
    "@types/react": "*",
    "@types/react-dom": "*",
    "@vitest/browser-playwright": "^4.0.1",
    "cpy-cli": "^5.0.0",
    "playwright": "^1.55.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^5.9.2",
    "vitest": "^4.0.1",
    "vitest-browser-react": "^2.0.0"
  },
  "peerDependencies": {
    "@types/react": "^16.8.0 || ^17.0.0 || ^18.0.0 || ^19.0.0",
    "react": "^16.8.0 || ^17.0.0 || ^18.0.0 || ^19.0.0",
    "react-dom": "^16.8.0 || ^17.0.0 || ^18.0.0 || ^19.0.0"
  },
  "peerDependenciesMeta": {
    "@types/react": {
      "optional": true
    }
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "files": [
    "dist",
    "src"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wojtekmaj/react-date-picker.git",
    "directory": "packages/react-date-picker"
  },
  "funding": "https://github.com/wojtekmaj/react-date-picker?sponsor=1"
}
